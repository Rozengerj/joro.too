@using joro.too.Entities
@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model LoginViewModel

@inject SignInManager<User> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-controller="Account" asp-action="Logout">
            <button id="logout" type="submit" class="nav-link btn btn-link text-dark border-0">Logout</button>
        </form>
    </li>
}
else {
    <link rel="stylesheet" href="~/css/loginRegisterForm.css" asp-append-version="true"/>
    <div style="justify-content: center; display: grid">
        <h2 align="center" style="text-align: center" class="textoutline">Login</h2>
        <form asp-action="Login" method="post" class="form textoutline outline-background-me"
              >
            <div class="input-span">
                <label asp-for="Email"></label>
                <input asp-for="Email"/>
                <span asp-validation-for="Email"></span>
            </div>
            <div class="input-span">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password"/>
                <span asp-validation-for="Password"></span>
            </div>
            <div class="input-span" style="justify-content: center">
                <label asp-for="RememberMe" style="align-self: center"></label>
                <input asp-for="RememberMe" type="checkbox"/>
            </div>
            <button class="submit" type="submit">Login</button>
            <!--<span>@Model.IncorrectData</span>-->
        </form>
        <a asp-action="Register" class="span textoutline" asp-controller="Account" style="display: grid; justify-content: center">Don't Have An Account?</a>
    </div>
}