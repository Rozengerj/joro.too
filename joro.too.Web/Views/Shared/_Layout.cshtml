<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - joro.to</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/joro.to.styles.css" asp-append-version="true"/>
</head>
<body style="background: #2a2733">
<header style="background: #423952">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">joro.to</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    <li style="align-self: end">
                        <form asp-controller="Media" asp-action="SearchResult">
                            <input name="name" id="name" type="text"
                                   placeholder="Search for your favourite movies here">
                            <input type="submit" class="btn">
                                Search!
                            
                        </form>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div style="background: #2a2733;">
    <main role="main">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted" style="position: absolute;bottom: 1em;width: 100%;">
    <div class="container">
        &copy; 2025 - joro.to - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="@Url.Content("~/js/site.js")" asp-append-version="true" type="text/jsx"></script>
<script src="~/js/AddShowScript.js" asp-append-version="true" type="module"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>site