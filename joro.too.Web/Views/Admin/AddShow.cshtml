@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AddMovieModel
<link rel="stylesheet" href="~/css/Searchbar.css" asp-append-version="true" />
<form method="post" enctype="multipart/form-data" asp-action="AddShow" asp-controller="Admin">
    <div>
        Name
        <input name="name" id="name" type="text">
    </div>
    <div>
        Description
        <input name="desc" id="desc" type="text">
    </div>
    <div style="float: right">
        Upload image
        <input type="file" id="imgSrc" name="imgSrc" accept="image/*">
    </div>
    
    <div>
        @foreach (var item in Model.Genres)
        {
            <input name="genres" id="@item.Value" value="@item.Value" type="checkbox"> @item.Text
        }
    </div>
    <div>
        <ol id="SeasonList" style="display: flex; flex-wrap: wrap; list-style-type: none; float: unset">
        </ol>
    </div>
    <div>
        <button id="AddSeasonBtn">
            Add Season
        </button>
    </div>
    <input type="submit" class="btn">
</form>

<script src="~/js/AddShowScript.js" asp-append-version="true" type="module"></script>
