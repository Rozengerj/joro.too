@model EditSeasonModel
@if (!User.IsInRole("Admin"))
{
    <h1 class="text-center textoutline">
        Hiya, instead of trying to put your nose where it does'nt belong, why don't you instead enjoy some of the media
        in our fine collection hm?

    </h1>
    <p class="text-center textoutline">
        <a asp-action="SearchResult" asp-controller="Search">Go back and don't waste your time here</a>
    </p>
}
else
{
    <form method="post" enctype="multipart/form-data" asp-action="EditSeason" xmlns="http://www.w3.org/1999/html">
        <input type="hidden" id="id" name="id" , value="@Model.id">
        Chnage name
        <input type="text" name="name" id="name" asp-for="name">
        <div class="EpisodeList">
            @foreach (var ep in Model.episodes)
            {
                <div>
                    @ep.name
                    <a asp-action="EditEpisode" asp-route-id="@ep.id" class="buttons btn-warning">Edit Episode</a>
                    <a asp-action="RemoveEpisode" asp-route-id="@ep.id" asp-route-seasonId="@Model.id"
                       class="buttons btn-danger">Remove Episode</a>

                </div>
            }
        </div>
        <div>
            <button id="AddEpisode" class="buttons btn">Add Episode</button>
        </div>
        <input type="submit">submit
    </form>
    <script src="~/js/AddEpisodeScript.js" asp - append - version="true" type="module"></script>
}
    
