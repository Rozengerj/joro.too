@model EditSeasonModel
@if (!User.IsInRole("Admin"))
{
    <h1 class="text-center textoutline">
        Hiya, instead of trying to put your nose where it doesn't belong, why don't you instead enjoy some of the media
        in our fine collection hm?

    </h1>
    <p class="text-center textoutline">
        <a asp-action="SearchResult" asp-controller="Search">Go back and don't waste your time here</a>
    </p>
}
else
{
    <link rel="stylesheet" href="~/css/UplaodImage.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/Botonlmao.css" asp-append-version="true"/>
    <div style="display: grid;">
    <form method="post" enctype="multipart/form-data" asp-action="EditSeason" xmlns="http://www.w3.org/1999/html" class="textoutline" style="display: grid; justify-content: center; justify-self: center; background-color: #574662; border-radius: 12px; width: 50vw; margin-top: 1rem;">
        <input type="hidden" id="id" name="id" , value="@Model.id">
        Chnage name
        <input required="required" minlength="3" maxlength="69" type="text" name="name" id="name" asp-for="name" class="input">
        <div class="EpisodeList">
            @foreach (var ep in Model.episodes)
            {
                <div style="margin: 1rem">
                    @ep.name
                    <a asp-action="EditEpisode" asp-route-id="@ep.id" class="boton-elegante" style="background-color: palegoldenrod">Edit Episode</a>
                    <a asp-action="RemoveEpisode" asp-route-id="@ep.id" asp-route-seasonId="@Model.id" class="boton-elegante" style="background-color: orangered">Remove Episode</a>

                </div>
            }
        </div>
        <div>
            <button id="AddEpisode" class="boton-elegante">Add Episode</button>
        </div>
        <input type="submit" class="boton-elegante" value="Update Season">
    </form>
    </div>
    <script src="~/js/AddEpisodeScript.js" asp - append - version="true" type="module"></script>
}
    
