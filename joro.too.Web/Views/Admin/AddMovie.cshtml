@using Microsoft.AspNetCore.Mvc.TagHelpers
@using joro.too.Entities
@model AddMovieModel


<form method="post" enctype="multipart/form-data">
    <div>
        Name
        <input asp-for="@Model.name" name="name" id="name" type="text">
    </div>
    <div>
        Description
        <input asp-for="@Model.desc" name="desc" id="desc" type="text">
    </div>
    <div style="float: right">
        Upload image
        <input asp-for="@Model.img" type="file" id="img" name="img" accept="image/*">
    </div>
    <div>
        @foreach (var item in Model.Genres)
        {
            <input asp-for="@Model.genres" name="genres" id="@item.Value" value="@item.Value" type="checkbox"> @item.Text
        }
    </div>
    <div>
        Upload video
        <input asp-for="@Model.vid" type="file" id="vid" name="vid" accept="video/*">
    </div>
    <input type="submit" class="btn">
    
</form>

